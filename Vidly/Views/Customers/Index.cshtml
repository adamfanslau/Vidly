@model System.Collections.Generic.List<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model.Count == 0)
{
    <h3>There are no customers at the time</h3>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <td>Customer</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var customer in Model)
            {
                <tr><td><a href="Customers/Details/@customer.Id">@customer.Name</a></td></tr>
            }
        </tbody>
    </table>
}

