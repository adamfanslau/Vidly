@model System.Collections.Generic.List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Count == 0)
{
    <h3>There are no movies at the time</h3>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <td>Movie</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr><td><a href="Movies/Details/@movie.Id">@movie.Name</a></td></tr>
            }
        </tbody>
    </table>
}